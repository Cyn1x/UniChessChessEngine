{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist/",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
